<h1>Create a new Pet</h1>


 <form action="/pets" method="POST">
  <label>Pet name:</label>

  <br>

  <input type="text" id="pet_name" name="pet[name]">
  <p>Select an existing owner:</p>
  <%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>

  <br>
  <br>
  <label>Or create a new owner:</label>
  <br>
  <br>
  <label>New owner name: </label>
  <input type="text" id="owner_name" name="owner[name]"></input>
  <br>
  <br>
  <input type="submit" value="Create Pet">
  
  
  </form>