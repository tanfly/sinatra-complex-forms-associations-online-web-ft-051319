<h1>Update Pet</h1>


 <form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Pet name:</label>


   <br>

   <input type="text" id="pet_name" name="pet[name]">

   <br>
  <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner=owner%>><%=owner.name%></input>
  <%end%>

   <br>

   <label>Create Owner:</label>
  <br>
  <label>Name: </label>
  <input type="text" id="owner_name" name="owner[name]">
  <br>
  <input type="submit" value="Update Pet">
</form>
