<h1>Update Pet</h1>


<form action="/pets/<%=@pet.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Name:</label>


  <br>

  <input type="text" id="pet_name" name="pet[name]" value="<%=@pet.name%>">

  <br>
  <p>Choose and existing owner:</p>
  <% @owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner.name == owner.name %>><%=owner.name%></input>
  <%end%>

  <br>
  <br>

  <label>or create a new owner:</label>
  <br>
  <label>Name: </label>
  <input type="text" id="owner_name" name="owner[name]"></input>
  <br>
  <br>
  <input type="submit" value="Update Pet">

  </form>